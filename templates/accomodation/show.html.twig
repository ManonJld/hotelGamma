{% extends 'base.html.twig' %}

{% block title %}Nos chambres{% endblock %}

{% block body %}
    <section class="page-header room-header container">
        <img src="{{ asset('uploads/accomodations/' ~ accomodation.photo) }}" class="img-responsive" alt="Gamma Hotel">
    </section>

    <section class="container room-content">
        <article class="room-description">
            <div class="room-description-images">
                <img src="{{ asset('uploads/accomodations/' ~ accomodation.photo) }}" class="img-responsive" alt="Appartement standard">
                {% for photo in accomodation.photos %}
                    <img src="{{asset('uploads/accomodations/' ~ photo.filename) }}" class="img-responsive" alt="Appartement standard">
                {% endfor %}


            </div>
            <div class="room-description-content">
                <h1>{{ accomodation.type }}{{ accomodation.category }}</h1>
                <ul class="room-features">

                    <li><i class="fa fa-bed"></i> {{ accomodation.beds }}</li>
                    <li><i class="fa fa-user"></i> {{ accomodation.persons }}</li>
                    <li><i class="fa fa-expand"></i> {{ accomodation.size }}<sup>2</sup></li>
                    <li><i class="fa fa-euro"></i> {{ accomodation.price }}</li>
                </ul>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci atque, consectetur dicta dignissimos dolor, doloremque dolores error, excepturi minus molestias nam nemo non placeat provident quis reiciendis repellendus veniam veritatis.</p>
                <h2>Équipements</h2>
                <ul class="room-amenities">
                    {% for amenity in accomodation.amenities %}
                        <li><i class="{{ amenity.icon }}"></i> {{ amenity.name }}</li>
                    {% endfor %}
                </ul>
                <form class="form-booking">
                    <fieldset>
                        <legend>Réservation</legend>
                        {% if app.user %}
                            {{ form(form) }}
                            {% else %}
                            <a class="button button-primary" href="{{ path('app_login') }}">Se connecter</a>
                        {% endif %}
