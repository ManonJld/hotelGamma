
    <article>
        <header>
            <img src="{{  asset('uploads/accomodations/' ~ accomodation.photo) }}" class="img-responsive" alt="Chambre Standard">
        </header>
        <footer>
            <h3>{{ accomodation.type}} {{ accomodation.category }} {{ accomodation.id }}</h3>
