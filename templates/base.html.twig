<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}" />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{% block title %}Accueil{% endblock %}</title>
</head>
<body>

<header class="header-main">
    <div class="top-navigation container">
        <div class="address">54 route de la plage, 56100 Lorient</div>
        <div class="nav-connexion">
            <ul>
                {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('admin') }}">Administration</a>
                    </li>
                {% endif %}
                <li>
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('app_login') }}">Se connecter</a>
                </li>
            {% endif %}
            </ul>
        </div>
        <nav class="nav-social">
            <ul>
                <li>
                    <a href="#"><span class="fa fa-facebook"></span></a>
                    <a href="#"><span class="fa fa-twitter"></span></a>
                    <a href="#"><span class="fa fa-linkedin"></span></a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="main-navigation container">
        <a href="{{ path('homepage') }}">
            <img src="{{ asset('images/logo.png') }}" class="logo" alt="Gamma Hotel">
        </a>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('homepage') }}">Accueil</a>
                </li>
                <li>
                    <a href="#">Actualités</a>
                </li>
                <li>
                    <a href="{{ path('accomodation_index') }}">Nos chambres</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>

            </ul>
        </nav>
    </div>
</header>



{% block body %}{% endblock %}


<footer class="footer-container container">
    <div class="footer-main">
        <ul class="footer-nav">
            <li><a href="{{ path('homepage') }}">Accueil</a></li>
            <li><a href="#">Actualités</a></li>
            <li><a href="{{ path('accomodation_index') }}">Nos Chambres</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
        <p>Copyright 2019 Tous droits réservés</p>
    </div>
    <div class="footer-secondary"></div>
</footer>

<script src="bundle.js"></script>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
